<div id="new_goal_controls">
  <h4>New Goal</h4>
  <%= form_for [@user, Goal.new], :remote => true do |f| %>
    <p>
      <%= f.label :description, "Description" %><br/>
      <%= f.text_area :description %>
      <%= f.label :motivation, "Motivation" %><br/>
      <%= f.text_area :motivation %>
    </p>
    <p><%= f.submit "Add goal", class: "btn btn-primary" %></p>
  <% end %>
</div>