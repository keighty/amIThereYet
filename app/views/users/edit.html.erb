<% provide(:title, "Edit") %>

<% content_for :sidebar do %>
  <%= render 'users/sides/edit_sidebar' %>
<% end %>

<div class="edit_content" id="password_content">
  <%= render partial: 'edit_password' %>
</div>

<div class="edit_content hideme" id="goal_content">
  <div id="goals"></div>
  <%= link_to "Add Goal", [@user, Goal.new] , :remote => true, class: "btn", id: "add_goal_button" %>
  <hr>
  <%= render partial: @user.goals, locals:{ make_edits: true } %>
</div>

<div class="edit_content hideme" id="notification_content">
  <%= render partial: 'notifications' %>
</div>
