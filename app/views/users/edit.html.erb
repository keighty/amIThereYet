        <%= render partial: @user.goals, locals:{ make_edits: true } %>
      </div>
    </div>
    <div class="tab-pane" id="tab3">
      <div class="span6"><%= render partial: 'notifications' %></div>
    </div>
  </div>
</div> <!-- close div from sidebar partial -->