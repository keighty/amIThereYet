<% provide(:title, "Users") %>
<h1>Listing users</h1>
<div class="row-fluid">
  <div class="span10 well offset1">
      <%= will_paginate @users, class: "pages pagination" %>
    <table class="users">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td class="actions"><%= link_to 'Edit', edit_user_path(user), class: "btn" %>  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @users, class: "pages pagination" %>
  </div>
</div>