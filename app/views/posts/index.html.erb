<% provide(:title, "Posts") %>
 <h1>All posts
 <a href="/posts.atom"><i class="icon-rss"></i></a>
 </h1>
<div class="row-fluid">
  <div class="span10 offset1">
    <%= will_paginate @posts, class: "pages pagination" %>

    <% @posts.each do |post| %>
      <h3>
        <%= link_to post.title, post %>
      </h3>
        Posted: <%= post.created_at.strftime("%d-%b-%y") %>
      <div class="well">
          <%= truncate post.content.html_safe, length: 160 %>
          <%= link_to 'read more', post %>
      </div>
    <% end %>
    <%= will_paginate @posts, class: "pages pagination" %>
   </div>
</div>

 <%= link_to 'New Post', new_post_path %>