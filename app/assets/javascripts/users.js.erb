/**************
Document Ready:
  initialize page
***************/
 $(function() {
  initPage();
});

/**************
On change:
  initialize page.
***************/
$(window).bind('page:change', function() {
  initPage();
});

/**************
Initialize page:
  all event handlers.
***************/
function initPage() {
  /**************
  Load sidebar functions
  ***************/
  $('.edit_links').bind('click', function() {
    var clicked = $(this).attr("id");
    // hide all elements of edit_content
    $('.edit_content').addClass("hideme");
    // show the element that has been clicked
    $('#' + clicked + '_content').removeClass("hideme");
    // do not refresh the page
    return false;
  });
}

