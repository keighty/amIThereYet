var clicked;

/**************
Document Ready:
  initialize page
***************/
 $(function() {
  initPage();
});

/**************
On change:
  initialize page.
***************/
$(window).bind('page:change', function() {
  initPage();
});

/**************
Initialize page:
  all event handlers.
***************/
function initPage() {
  /**************
  Sidebar functions
  ***************/
  $('.edit_links').bind('click', function() {
    clearFlash();
    getClickedId($(this));
    showClicked();
    // do not refresh the page
    return false;
  });
}

var clearFlash = function clearFlash() {
  $('.alert').remove();
}

var getClickedId = function getClickedId(object) {
   clicked = object.attr("id");
}

var showClicked = function showClicked() {
  $('.edit_content').addClass("hideme");
  $('#' + clicked + '_content').removeClass("hideme");
}

